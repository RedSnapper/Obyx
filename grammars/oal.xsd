	<xs:import namespace="http://www.obyx.org/message" schemaLocation="message.xsd" />
	<xs:element name="http">
		 <xs:complexType mixed="false">
			<xs:choice minOccurs="1" maxOccurs="1">
				<xs:element name="request" >
					<xs:complexType mixed="false">
						<xs:sequence>
							 <xs:element ref="m:message" maxOccurs="1" minOccurs="0" />
						</xs:sequence>
						<xs:attribute name="method" type="xs:string" use="required"/>
						<xs:attribute name="url" type="xs:string" use="optional"/>
						<xs:attribute name="version" type="xs:string" use="optional"/>
					</xs:complexType>
				</xs:element>
				<xs:element name="response" >
					<xs:complexType mixed="false">
						<xs:sequence>
							<xs:element ref="m:message" maxOccurs="1" minOccurs="0" />
						</xs:sequence>
						<xs:attribute name="version" type="xs:string" use="required"/>
						<xs:attribute name="code" type="xs:string" use="required"/>
						<xs:attribute name="reason" type="xs:string" use="required"/>
					 </xs:complexType>
				</xs:element>
			</xs:choice>
		</xs:complexType>
	</xs:element>
	<xs:element name="mta">
		<xs:complexType mixed="false">
			<xs:choice minOccurs="1" maxOccurs="1">
				 <xs:element name="send" >
					<xs:complexType mixed="false">
						<xs:sequence>
							<xs:element ref="m:message" maxOccurs="1" minOccurs="1" />
						</xs:sequence>
						<xs:attribute name="sender" type="xs:string" use="optional"/>
					 </xs:complexType>
				</xs:element>
			</xs:choice>
		</xs:complexType>
	</xs:element>
</xs:schema>